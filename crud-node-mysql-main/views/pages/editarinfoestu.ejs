<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../includes/head') %>
  </head>
  <body>
    <%- include('../includes/header') %>

    <div class="container" style="margin-top: 80px !important">
      <div class="row justify-content-md-center mb-5">
        <div class="col-md-12 mt-5">
          <h2 class="text-center title">
            Editar Estudiante
            <hr />
          </h2>
        </div>
      </div>

      <div class="row justify-content-md-center mb-5">
        <div class="col-md-6">
          <form action="/estudiantes/<%= estudiante.id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="nombre_alumno" class="form-label">Nombre del Estudiante</label>
              <input type="text" name="nombre_alumno" class="form-control" value="<%= estudiante.nombre_alumno %>" required />
            </div>

            <div class="mb-3">
              <label for="email_alumno" class="form-label">Email del Estudiante</label>
              <input type="email" name="email_alumno" class="form-control" value="<%= estudiante.email_alumno %>" required />
            </div>

            <div class="mb-3">
              <label for="curso_alumno">Curso</label>
              <select name="curso_alumno" class="form-select">
                <option value="Python" <% if (estudiante.curso_alumno === 'Python') { %> selected <% } %>>Python</option>
                <option value="NodeJS" <% if (estudiante.curso_alumno === 'NodeJS') { %> selected <% } %>>NodeJS</option>
                <option value="PHP" <% if (estudiante.curso_alumno === 'PHP') { %> selected <% } %>>PHP</option>
                <option value="JavaScript" <% if (estudiante.curso_alumno === 'JavaScript') { %> selected <% } %>>JavaScript</option>
              </select>
            </div>

            <div class="d-grid gap-2 col-12 mx-auto mt-4 mb-4">
              <button class="btn btn-success" type="submit">
                Guardar Cambios
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('../includes/scripts') %>
  </body>
</html>
